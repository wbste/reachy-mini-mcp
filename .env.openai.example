# OpenAI API Configuration
# For OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# For Azure OpenAI
# OPENAI_API_KEY=your-azure-key
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
# OPENAI_MODEL=gpt-4

# For local vLLM (OpenAI-compatible mode)
# OPENAI_BASE_URL=http://localhost:8200/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=meta-llama/Llama-3.1-8B-Instruct

# For LM Studio
# OPENAI_BASE_URL=http://localhost:1234/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=local-model

# For Ollama (with OpenAI compatibility)
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=llama3.1

# Robot Control Server Configuration
ROBOT_SERVER_URL=http://localhost:8100

# Reachy Mini Daemon Configuration
REACHY_BASE_URL=http://localhost:8000

# TTS Configuration (optional)
# Path to piper model (without .onnx extension)
